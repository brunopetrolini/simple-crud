{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["./dist"]
}
